<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sistemadeventas.controllers.AdminProductManagerController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-family: Arial; -fx-font-size: 20;" text="Categoría:" />
            <ComboBox fx:id="comboBoxCategorias" promptText="Seleccione una categoría" style="-fx-font-family: Arial; -fx-font-size: 20;" />
            <Button onAction="#handleAddProduct" style="-fx-font-family: Arial; -fx-font-size: 20; -fx-background-color: lightblue;" text="Añadir Producto" />
            <Button onAction="#handleLogout" style="-fx-font-family: Arial; -fx-font-size: 20; -fx-background-color: lightcoral;" text="Cerrar Sesión" />
        </HBox>
    </top>
    <center>
        <AnchorPane>
            <TableView fx:id="tablaProductos" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <!-- Columnas de la tabla -->                
            </TableView>
        </AnchorPane>
    </center>
</BorderPane>
